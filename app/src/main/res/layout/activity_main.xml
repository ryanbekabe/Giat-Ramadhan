<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8EC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_giat"
            android:textColor="#1A3C34"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/subtitle_giat"
            android:textColor="#365E32"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hari"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#9FCAA0" />

                <TextView
                    android:id="@+id/textSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/default_summary"
                    android:textColor="#2F5249"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sholat"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkSubuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/subuh" />

                <CheckBox
                    android:id="@+id/checkDzuhur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dzuhur" />

                <CheckBox
                    android:id="@+id/checkAshar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ashar" />

                <CheckBox
                    android:id="@+id/checkMaghrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maghrib" />

                <CheckBox
                    android:id="@+id/checkIsya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/isya" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_puasa"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupPuasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioPuasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/puasa" />

                    <RadioButton
                        android:id="@+id/radioTidakPuasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tidak_puasa" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:text="@string/footer_note"
            android:textColor="#4F6F52"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
