<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8EC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_giat"
            android:textColor="#1A3C34"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/subtitle_giat"
            android:textColor="#365E32"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hari"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#9FCAA0" />

                <TextView
                    android:id="@+id/textSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/default_summary"
                    android:textColor="#2F5249"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/default_score"
                    android:textColor="#1A3C34"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textAchievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/default_achievement"
                    android:textColor="#2F5249"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/default_streak"
                    android:textColor="#4F6F52" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sholat"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkSubuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/subuh"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkDzuhur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dzuhur"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkAshar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ashar"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkMaghrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maghrib"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkIsya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/isya"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkTarawih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tarawih"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/checkWitir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/witir"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_waktu_sholat"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textImsakTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#2F5249" />

                <TextView
                    android:id="@+id/textSubuhTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2F5249" />

                <TextView
                    android:id="@+id/textZuhurTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2F5249" />

                <TextView
                    android:id="@+id/textAsarTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2F5249" />

                <TextView
                    android:id="@+id/textMagribTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2F5249" />

                <TextView
                    android:id="@+id/textIsyaTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2F5249" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_catatan"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/hint_catatan"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCatatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textColorHint="@color/text_secondary"
                        android:textColor="@color/text_primary"
                        android:minLines="3"
                        android:maxLines="5" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/checkTadarus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/label_tadarus_check"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_puasa"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupPuasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioPuasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/puasa"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/radioTidakPuasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tidak_puasa"
                        android:textColor="@color/text_primary" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_grafik"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label_grafik_desc"
                    android:textColor="#4F6F52"
                    android:textSize="12sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartProgress"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_heatmap"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label_heatmap_desc"
                    android:textColor="#4F6F52"
                    android:textSize="12sp" />

                <GridLayout
                    android:id="@+id/gridHeatmap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="6" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:text="@string/footer_note"
            android:textColor="#4F6F52"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/button_about" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMasukanSaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/button_masukan_saran" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D8EFCF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textAppVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1A3C34"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCheckUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/check_update" />

                <TextView
                    android:id="@+id/textUpdateStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/update_status_idle"
                    android:textColor="#4F6F52" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
